<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <EditText
        android:id="@+id/editTextExerciseCalories"
        style="@style/EditTextStyle"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Calories"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/editTextExerciseDescription"
        android:layout_alignStart="@+id/editTextExerciseDescription" />

    <EditText
        android:id="@+id/editTextExerciseDescription"
        style="@style/EditTextStyle"
        android:layout_below="@+id/editTextExerciseCalories"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Description"/>

    <TextView
        android:id="@+id/textViewCaloriesBurnt"
        style="@style/LabelStyle"
        android:text="Calories: "
        android:layout_alignBaseline="@+id/editTextExerciseCalories"
        android:layout_alignBottom="@+id/editTextExerciseCalories"
        android:layout_toLeftOf="@+id/editTextExerciseCalories"
        android:layout_toStartOf="@+id/editTextExerciseCalories" />
    <TextView
        android:id="@+id/textViewExerciseDescription"
        style="@style/LabelStyle"
        android:text="Description: "
        android:layout_alignBaseline="@+id/editTextExerciseDescription"
        android:layout_alignBottom="@+id/editTextExerciseDescription"
        android:layout_toLeftOf="@+id/editTextExerciseDescription"
        android:layout_toStartOf="@+id/editTextExerciseDescription" />


    <Button
        android:id="@+id/addExercise"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Exercise"
        android:layout_alignBaseline="@+id/updateExerciseData"
        android:layout_alignBottom="@+id/updateExerciseData"
        android:layout_alignRight="@+id/exerciseDate"
        android:layout_alignEnd="@+id/exerciseDate" />

    <Button
        android:id="@+id/updateExerciseData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Exercise"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="89dp" />

    <EditText
        android:id="@+id/exerciseDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/editTextExerciseDescription"
        android:layout_alignLeft="@+id/editTextExerciseDescription"
        android:layout_alignStart="@+id/editTextExerciseDescription"
        android:layout_marginTop="30dp" />

    <TextView
        android:id="@+id/exerciseDateTextView"
        style="@style/LabelStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date: "
        android:layout_alignBaseline="@+id/exerciseDate"
        android:layout_alignBottom="@+id/exerciseDate"
        android:layout_toLeftOf="@+id/exerciseDate"
        android:layout_toStartOf="@+id/exerciseDate" />

    <EditText
        android:id="@+id/exerciseTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/exerciseDate"
        android:layout_alignRight="@+id/exerciseDate"
        android:layout_centerVertical="true"
        android:ems="10"
        android:inputType="time"
         />

    <TextView
        android:id="@+id/exerciseTimeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/exerciseTime"
        style="@style/LabelStyle"
        android:layout_toStartOf="@+id/exerciseTime"
        android:text="Time:" />

</RelativeLayout>
